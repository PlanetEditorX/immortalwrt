option netmask '255.0.0.0'

config globals 'globals'
    option ula_prefix 'fd98:9655:39f9::/48'

config interface 'lan'
    option proto 'static'
    option netmask '255.255.255.0'
    option ipbassign '60'
    option ipaddr '192.168.1.100'
    option gateway '192.168.1.1'
    option device 'eth0'
    list dns '223.5.5.5'
